# Trading System Environment Variables

# Alpaca Trading API (Required)
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here
ALPACA_BASE_URL=https://paper-api.alpaca.markets  # Use paper trading by default

# Database (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/trading_db

# API Security (Required)
TRADING_API_KEY=your_secure_random_api_key_here

# AI Service (Optional - only needed for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# AI Service Configuration (Optional)
AI_SERVICE_API_KEY=your_ai_service_api_key_here

# Logging Configuration (Optional)
LOG_LEVEL=INFO
LOG_FORMAT=json

# System Configuration (Optional)
MAX_POSITION_SIZE_PCT=0.05  # 5% max position size
MIN_SIGNAL_CONFIDENCE=0.6   # 60% minimum confidence
RISK_ENGINE_ENABLED=true
PAPER_TRADING=true